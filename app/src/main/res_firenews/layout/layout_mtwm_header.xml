<?xml version="1.0" encoding="utf-8"?>
<com.cnews.guji.smart.helper.refresh.qqmailrefresh.GJMailRefreshHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshCustomRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:background="@color/material_red_300"-->
    <LinearLayout
        android:id="@+id/llRefresh"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/img_video_header_bg"
        android:gravity="top"
        android:orientation="vertical">
        <com.cnews.guji.smart.helper.refresh.qqmailrefresh.QQMailRefreshView
            android:id="@+id/mailRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="visible"
            android:id="@+id/ivRefresh"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/animation_list_refresh_mail" />
    </LinearLayout>
</com.cnews.guji.smart.helper.refresh.qqmailrefresh.GJMailRefreshHeaderView>