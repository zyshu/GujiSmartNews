<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="5dp"
    app:contentPadding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/llMyOrderTitle"
            layout="@layout/item_profile_my_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal"
            android:weightSum="5">

            <include
                android:id="@+id/llOrder1"
                layout="@layout/item_profile_order_contentitem" />

            <include
                android:id="@+id/llOrder2"
                layout="@layout/item_profile_order_contentitem" />

            <include
                android:id="@+id/llOrder3"
                layout="@layout/item_profile_order_contentitem" />

            <include
                android:id="@+id/llOrder4"
                layout="@layout/item_profile_order_contentitem" />

            <include
                android:id="@+id/llOrder5"
                layout="@layout/item_profile_order_contentitem" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

