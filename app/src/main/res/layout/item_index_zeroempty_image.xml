<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSingleRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/article_list_item_bg_selector"
    android:gravity="center_vertical"
    android:paddingTop="15dip"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/Margin1"
        android:paddingRight="@dimen/Margin1"
        android:paddingBottom="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/article_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="6dp">
            <TextView
                android:id="@+id/Tarticle_title"
                android:textColor="@color/Gray1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:includeFontPadding="false"
                android:maxLines="3" />

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/Margin1"
        android:paddingRight="@dimen/Margin1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/hotFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/material_red_400"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/bg_verificationcode_btn_red_border"
                android:visibility="visible"
                android:text="热点"/>
            <TextView
                android:id="@+id/tvTSourceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/Gray3"
                android:textSize="10sp"
                android:visibility="visible"
                android:text="微信公众账号"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_homepage_comment_normal"/>
            <TextView
                android:id="@+id/tvTcommetnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Gray3"
                android:textSize="10sp"
                android:visibility="visible"
                android:text="32"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Gray3"
                android:layout_marginLeft="20dp"
                android:textSize="10sp"
                android:visibility="visible"
                android:text=""/>
        </LinearLayout>
        <ImageView
            android:id="@+id/article_dislike"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_homepage_dislike_normal" />
    </RelativeLayout>
    <TextView
        android:id="@+id/btm_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/LGray3"/>

</LinearLayout>