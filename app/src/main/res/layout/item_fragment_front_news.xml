<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cnews.guji.smart.helper.imageview.ExpandImageView
            android:id="@+id/imgTop"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            fresco:placeholderImage="@mipmap/place_image_default"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="10dp" />
        <!--android:background="@drawable/shape_tip_bg"-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_tip_bg"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvFlagJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="马上参与"
                android:gravity="center_horizontal"
                android:textColor="@color/Gray2"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvFlagJoinNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:text=""
                android:background="@color/material_brown_500"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/alpha_80_white"
            android:gravity="center"
            android:background="@drawable/shape_tip_status"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text=""/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tvGUBINum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/alpha_80_white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="11sp"
            android:text=""/>

    </FrameLayout>
    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_text_bottom_radius"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:text="【竞猜】以食为天：图中这道菜的菜名是巴蜀地还是八百里"
        android:textColor="@color/Gray1"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
